<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    tools:context=".AddHumorActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="24dp">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/add_humor_title"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="?attr/colorPrimary"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_question"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="@string/question_feeling"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_title" />

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/cg_humor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:singleLine="false"
                app:chipSpacing="10dp"
                app:singleSelection="true"
                app:selectionRequired="true"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_question">

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_rad"
                    style="@style/Widget.Material3.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/humor_rad"
                    app:chipIcon="@drawable/ic_mood_rad"
                    app:chipIconTint="@null" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_happy"
                    style="@style/Widget.Material3.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/humor_happy"
                    app:chipIcon="@drawable/ic_mood_happy"
                    app:chipIconTint="@null" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_grateful"
                    style="@style/Widget.Material3.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/humor_grateful"
                    app:chipIcon="@drawable/ic_mood_grateful"
                    app:chipIconTint="@null" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_calm"
                    style="@style/Widget.Material3.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/humor_calm"
                    app:chipIcon="@drawable/ic_mood_calm"
                    app:chipIconTint="@null" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_neutral"
                    style="@style/Widget.Material3.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/humor_neutral"
                    app:chipIcon="@drawable/ic_mood_neutral"
                    app:chipIconTint="@null" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_pensive"
                    style="@style/Widget.Material3.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/humor_pensive"
                    app:chipIcon="@drawable/ic_mood_pensive"
                    app:chipIconTint="@null" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_tired"
                    style="@style/Widget.Material3.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/humor_tired"
                    app:chipIcon="@drawable/ic_mood_tired"
                    app:chipIconTint="@null" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_sad"
                    style="@style/Widget.Material3.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/humor_sad"
                    app:chipIcon="@drawable/ic_mood_sad"
                    app:chipIconTint="@null" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_anxious"
                    style="@style/Widget.Material3.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/humor_anxious"
                    app:chipIcon="@drawable/ic_mood_anxious"
                    app:chipIconTint="@null" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_angry"
                    style="@style/Widget.Material3.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/humor_angry"
                    app:chipIcon="@drawable/ic_mood_angry"
                    app:chipIconTint="@null" />

            </com.google.android.material.chip.ChipGroup>

            <TextView
                android:id="@+id/tv_notes_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="@string/label_notes_optional"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cg_humor" />

            <TextView
                android:id="@+id/tv_notes_question"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/question_why"
                android:textColor="?attr/colorOnSurfaceVariant"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_notes_title" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_notes"
                style="@style/AppTextInputLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_notes_question">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_notes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="top"
                    android:hint="@string/hint_notes"
                    android:lines="4" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_save"
                style="@style/AppButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="@string/action_save_record"
                android:paddingVertical="12dp"
                app:layout_constraintTop_toBottomOf="@id/til_notes"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>