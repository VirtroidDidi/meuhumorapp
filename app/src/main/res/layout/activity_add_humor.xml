<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    tools:context=".AddHumorActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="24dp">

            <!-- Título da Tela -->
            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Registrar Humor"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="?attr/colorPrimary"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- Pergunta da Seleção de Humor -->
            <TextView
                android:id="@+id/tv_question"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Como você está se sentindo agora?"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_title" />

            <!-- Grupo de Botões de Humor (Usando Outlined Buttons e ChipGroup para layout flexível) -->
            <com.google.android.material.chip.ChipGroup
                android:id="@+id/cg_humor"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:singleSelection="true"
                app:selectionRequired="true"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_question">

                <!-- Importante: Certifique-se de ter os drawables ic_calm_24, ic_energetic_24, etc.
                     ou use ícones padrão do Android (ex: android:drawableStart="@android:drawable/ic_dialog_info")
                     se ainda não os tiver criado. -->

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_calm"
                    style="@style/AppOutlinedButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Calmo"
                    app:icon="@drawable/ic_calm_24"
                    app:iconGravity="textStart"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_energetic"
                    style="@style/AppOutlinedButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Energético"
                    app:icon="@drawable/ic_energetic_24"
                    app:iconGravity="textStart"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_sad"
                    style="@style/AppOutlinedButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Triste"
                    app:icon="@drawable/ic_sad_24"
                    app:iconGravity="textStart"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_angry"
                    style="@style/AppOutlinedButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Irritado"
                    app:icon="@drawable/ic_angry_24"
                    app:iconGravity="textStart"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_neutral"
                    style="@style/AppOutlinedButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Neutro"
                    app:icon="@drawable/ic_neutral_24"
                    app:iconGravity="textStart"/>

            </com.google.android.material.chip.ChipGroup>

            <!-- Seção "Notas do Dia" -->
            <TextView
                android:id="@+id/tv_notes_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="Adicionar Notas (Opcional)"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cg_humor" />

            <TextView
                android:id="@+id/tv_notes_question"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="O que te fez sentir assim hoje?"
                android:textColor="?attr/colorOnSurfaceVariant"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_notes_title" />

            <!-- Campo de Texto para Notas (Usando TextInputLayout) -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_notes"
                style="@style/AppTextInputLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_notes_question">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_notes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="top"
                    android:hint="Descreva seu dia aqui..."
                    android:lines="4" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Botão "Salvar Registro" -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_save"
                style="@style/AppButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="Salvar Registro"
                android:paddingVertical="12dp"
                app:layout_constraintTop_toBottomOf="@id/til_notes"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
