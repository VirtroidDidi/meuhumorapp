<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.AppHumor" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/md_theme_light_primary</item>
        <item name="colorOnPrimary">@color/md_theme_light_onPrimary</item>
        <item name="colorPrimaryContainer">@color/md_theme_light_primaryContainer</item>
        <item name="colorOnPrimaryContainer">@color/md_theme_light_onPrimaryContainer</item>

        <item name="colorSecondary">@color/md_theme_light_secondary</item>
        <item name="colorOnSecondary">@color/md_theme_light_onSecondary</item>
        <item name="colorSecondaryContainer">@color/md_theme_light_secondaryContainer</item>

        <item name="android:colorBackground">@color/md_theme_light_background</item>
        <item name="colorSurface">@color/md_theme_light_surface</item>
        <item name="colorOnSurface">@color/md_theme_light_onSurface</item>
        <item name="colorOnSurfaceVariant">@color/md_theme_light_outline</item>

        <item name="colorOutline">@color/md_theme_light_outline</item>
        <item name="colorOutlineVariant">@color/md_theme_light_outlineVariant</item>

        <item name="colorSurfaceContainerHigh">@color/md_theme_light_surfaceContainerHigh</item>
        <item name="colorSurfaceContainerLow">@color/md_theme_light_surfaceContainerLow</item>

        <item name="android:statusBarColor">@color/md_theme_light_background</item>
        <item name="android:windowLightStatusBar">true</item>

        <item name="materialButtonStyle">@style/AppButton</item>
        <item name="textInputStyle">@style/AppTextInputLayout</item>

        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.App.Small</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.App.Medium</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.App.Large</item>
    </style>

    <style name="ShapeAppearance.App.Small" parent="ShapeAppearance.Material3.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>
    <style name="ShapeAppearance.App.Medium" parent="ShapeAppearance.Material3.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>
    <style name="ShapeAppearance.App.Large" parent="ShapeAppearance.Material3.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">24dp</item>
    </style>

    <style name="AppButton" parent="Widget.Material3.Button">
        <item name="android:paddingVertical">12dp</item>
        <item name="android:textStyle">bold</item>
        <item name="cornerRadius">16dp</item>
    </style>

    <style name="AppTextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/md_theme_light_primary</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.App.Medium</item>
        <item name="boxBackgroundColor">@color/md_theme_light_surfaceContainerLow</item>
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
    </style>

    <style name="CircleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

</resources>